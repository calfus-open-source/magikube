{
  "compilerOptions": {
    "declaration": false,
    "module": "Node16",
    "moduleResolution": "node16",
    "target": "es2022",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "types": [
      "jest"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "ts-node": {
    "esm": true
  }
}