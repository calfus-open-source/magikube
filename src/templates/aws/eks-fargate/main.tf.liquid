provider "aws" {
    region     = "{{ aws_region }}"
}
  
terraform {
    backend "s3" {
        bucket  = "{{ project_id }}-tfstate"
        encrypt = true
        key     = "{{ project_name }}-{{ environment }}.tfstate"
        region  = "{{ aws_region }}"
    }
}

module "vpc" {
    source = "./modules/vpc"
    name = "{{ project_name }}-{{ environment }}-vpc"
    environment = "{{ environment }}"
    cidr = "{{ aws_vpc_cidr }}"
}