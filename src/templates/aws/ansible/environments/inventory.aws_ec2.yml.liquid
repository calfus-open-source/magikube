---
plugin: aws_ec2

regions:
  - us-west-2

filters:
  tag:Group:
    - bastion
    - k8s-master
    - k8s-worker
  instance-state-name: running

keyed_groups:
  - key: tags.Group
    separator: ''

hostnames:
  - network-interface.association.public-ip
  - network-interface.addresses.private-ip-address

vars:
  ansible_user: ubuntu
  ansible_ssh_private_key_file: ~/.ssh/{{ project_name }}-{{ environment }}-key.pem
