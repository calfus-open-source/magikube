#!/bin/bash
hours={{ server_uptime_limit }}
sleep "$(( 60 * 60 * hours ))"
/sbin/shutdown -h +10 "This machine has been up for $hours hours and will now shutdown to save money."$'\n'"If you are still actively using this machine please run the following command:"$'\n\n'"  shutdown -c; shutdown -h +120"$'\n\n'
