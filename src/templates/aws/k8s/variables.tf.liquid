variable "region" {
    description = "The region in which the resources will be created"
}

variable "project_id" {
    description = "The project id"
}

variable "project_name" {
    description = "The name of the project"
}

variable "environment" {
    description = "The environment in which the resources will be created"
}

variable "vpc_cidr" {
    description = "The CIDR block for the VPC"
}

variable "domain_name" {
    description = "The domain name for the project"
}

variable "source_code_repository" {
    description = "The source code repository"
}

{% if source_code_repository == 'github' %}
variable "github_access_token" {
    description = "The github access"
}

variable "github_owner" {
    description = "The github owner"
}
{% endif %}

variable "appType" {
   description = "List of app names"
   type        = list(string)
 }
 variable "cluster_type" {
  description = "Type of Kubernetes cluster (either 'eks' or 'k8s')"
  type        = string
  default     = "k8s"  # Default can be adjusted based on your needs
}

variable "cluster_endpoint" {
  description = "The endpoint of the Kubernetes cluster"
  default     = ""
}

variable "cluster_certificate_authority_data" {
  description = "The certificate authority data for the Kubernetes cluster"
  default     = ""
}

variable "cluster_token" {
  description = "The token for the Kubernetes cluster"
  default     = ""
}


